{
  "name": "jobrizz",
  "version": "1.0.0",
  "description": "AI-powered resume optimization platform",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "prebuild": "npm run copy-pdf-worker",
    "build": "tsc && vite build --mode production",
    "build:staging": "tsc && vite build --mode staging",
    "copy-pdf-worker": "if not exist public\\js mkdir public\\js && copy node_modules\\pdfjs-dist\\build\\pdf.worker.min.mjs public\\js\\pdf.worker.min.mjs",
    "preview": "vite preview",
    "preview:dist": "vite preview --port 4173",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "test:build": "npm run build && npm run preview:dist",
    "deploy:prod": "bash scripts/deploy.sh",
    "deploy:prod:win": "scripts\\deploy.bat",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.6",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.0",
    "@types/dompurify": "^3.0.5",
    "@types/uuid": "^10.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "docx": "^9.5.1",
    "dompurify": "^3.2.6",
    "file-saver": "^2.0.5",
    "jspdf": "^3.0.1",
    "mammoth": "^1.9.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^5.4.54",
    "react": "^19.1.1",
    "react-device-detect": "^2.2.3",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dnd-touch-backend": "^16.0.1",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.61.1",
    "react-router-dom": "^7.7.1",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/pdfjs-dist": "^2.10.377",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0",
    "vite": "^7.0.6"
  }
}
