# JobRizz Environment Configuration

# Application
VITE_APP_NAME=JobRizz
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-Powered Resume Analysis and Job Matching Platform

# Environment
VITE_NODE_ENV=development
VITE_APP_URL=http://localhost:5173

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000

# AI Service Configuration
VITE_AI_SERVICE_ENABLED=true
VITE_AI_PROCESSING_TIMEOUT=10000
VITE_AI_CONFIDENCE_THRESHOLD=0.7

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt
VITE_UPLOAD_TIMEOUT=60000

# Analytics (Optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=

# Feature Flags
VITE_FEATURE_RESUME_BUILDER=false
VITE_FEATURE_AI_RECOMMENDATIONS=true
VITE_FEATURE_JOB_MATCHING=true
VITE_FEATURE_DARK_MODE=true

# Security
VITE_RATE_LIMIT_ENABLED=true
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000

# Debug
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info