{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "jobrizz-backend",
    "version": "1.0.0",
    "description": "Backend API for JobRizz resume builder platform",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "prisma generate && tsc",
        "postinstall": "prisma generate",
        "start": "node dist/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src --ext .ts --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint src --ext .ts --fix",
        "type-check": "tsc --noEmit",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:seed": "tsx src/scripts/seed.ts",
        "db:studio": "prisma studio",
        "docker:setup": "bash scripts/docker-setup.sh",
        "docker:setup:win": "scripts\\docker-setup.bat",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "docker:clean": "docker-compose down -v --remove-orphans"
    },
    "dependencies": {
        "@prisma/client": "^5.22.0",
        "bcryptjs": "^2.4.3",
        "bull": "^4.16.3",
        "compression": "^1.7.5",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-rate-limit": "^7.4.1",
        "express-validator": "^7.2.0",
        "helmet": "^8.0.0",
        "jsonwebtoken": "^9.0.2",
        "mammoth": "^1.8.0",
        "morgan": "^1.10.0",
        "multer": "^3.0.0-alpha.1",
        "pdf-parse": "^1.1.1",
        "puppeteer": "^23.10.4",
        "redis": "^4.7.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.10.2",
        "@types/pdf-parse": "^1.1.4",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.18.1",
        "@typescript-eslint/parser": "^8.18.1",
        "eslint": "^9.17.0",
        "jest": "^29.7.0",
        "prisma": "^5.22.0",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2"
    },
    "overrides": {
        "glob": "^10.3.10",
        "inflight": "npm:@isaacs/inflight@^1.0.6"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}